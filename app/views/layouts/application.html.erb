<!DOCTYPE html>
<html>
  <head>
    <title>RorSocialScaffold</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <% if current_user %>
    <div class="sidenav">
      <div class="nav-links">
      <img src="<%= current_user.photo.thumb %>" class="avatar">
      </div>
      <div class="nav-links-name">
        <%= current_user.fullname %>
      </div>      
      <div class="nav-links">
        <%= menu_link_to 'Home', posts_path %>
      </div>
      <div class="nav-links">
        <%= menu_link_to 'Profile', edit_user_path(current_user) %>
      </div>
    </div>
    <% end %>
    <nav class='nav'>
    <div class='menu'>
        <div class="menu-item">
        <% if current_user %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        <% else %>
          <%= link_to 'Sign in', user_session_path %>
        <% end %>
      </div>
    </div>
    </nav>
    <% if notice.present? %>
      <div class="notice">
        <p> <%= notice %> </p>
      </div>
    <% end %>
    <% if alert.present? %>
      <div class="alert">
        <p> <%= alert %> </p>
      </div>
    <% end %>
    <main class="main">
      <%= yield %>
    </main>
  </body>
</html>