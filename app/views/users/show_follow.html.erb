

<section class="user_info new-initial">
      <img src="<%= @user.photo.thumb %>" class="avatar">
      <h1><%= @user.fullname %></h1>
      <span><%= link_to "view profile", @user %></span>
      <br>
      <span><b>Tweets:</b> <%= @user.posts.count %></span>
  <div class="stats">
    <a href="<%= following_user_path(@user) %>">
      <strong id="following" class="stat">
        <%= @user.following.count %>
      </strong>
      following
    </a>
    <a href="<%= followers_user_path(@user) %>">
      <strong id="followers" class="stat">
        <%= @user.followers.count %>
      </strong>
      followers
    </a>
  </div>
  
  <div class="new-initial-followers">
    <h2 ><%= @title %></h2>
    <br>
    <br>
    <% if @users.any? %>
      <ul class="users followed">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
  </section>
